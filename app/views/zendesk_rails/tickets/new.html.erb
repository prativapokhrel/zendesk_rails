<div class="page-header">
  <h1>New ticket</h1>
</div>

<div class="row">
  <div class="col-md-8">
    <%= form_tag(tickets_path(:format => :js), :remote => true, :id => 'new-ticket') do %>
      <div class="form-group">
        <%= label_tag :subject %>
        <%= text_field_tag :subject, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :body, 'Please Describe Your Issue' %>
        <%= text_area_tag :body, nil, :rows => 10, class: "form-control" %>
      </div>

      <p><%= submit_tag "Send Your Question", class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>

  <div class="col-md-4">
    <div class="well"><%= t 'zendesk.tickets.new.sidebar' %></div>
  </div>
</div>